ion-view.body-background(view-title='Login')
  ion-content
    .list.list-inset
      label.item.item-input
        input(type='text', placeholder='Username', ng-model='data.username', autofocus)
      label.item.item-input
        input(type='password', placeholder='Password', ng-model='data.password')
    button.button.button-block.light-orange.text-white(ng-click='login()') Login
    button.button.button-block.button-balanced(ui-sref='signup') Create Account
