ion-view(view-title='This is {{currentEventInView.ownerName}}\'s event')
  ion-nav-buttons(side='secondary')
    button.button(ui-sref='main')
      i.icon.ion-home
  ion-content
    #map(ng-class="class" data-tap-disabled="true")
  .buttonSection
    div(ng-show="!isUserOwner")
      button.button.button-block.dark-orange.text-white(ng-click='lockEvent(currentEventInView.id)', ng-hide="eventLocked") Lock Event
    div(ng-show="isUserOwner")
      button.button.button-block.button-balanced(ng-click='acceptEvent(currentEventInView.id)', ng-hide="userAttending" ng-disabled="buttonDisabled") Accept Event
  .infoSection
    .row
      .col.col-50
        .infoBox.center-text.text-white.margin-right-small(ng-show="userAttending")
          div.bold {{currentEventInView.locationName}}
          div {{currentEventInView.locationAddress1}}
          div {{currentEventInView.locationAddress2}}
          div {{currentEventInView.locationPhone}}
          div.bold(ng-show="eventLocked") This event's location has been locked by the creator
      .col.col-50
        .infoBox.center-text.text-white(ng-show="uber")
          div.bold {{uberData.display_name}}
          div ~{{uberData.estimate}}
          div Multiplier: {{uberData.surge_multiplier}}X
          div Miles: {{uberData.distance}}
